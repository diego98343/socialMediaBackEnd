# EditorConfig is awesome: https://EditorConfig.org

#  dont forget to install this dependecies
# sudo npm i -D @typescript-eslint/parser

# sudo npm i -D eslint eslint-config-prettier prettier
# sudo npm i -D @typescript-eslint/eslint-plugin

root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts,js}]
quote_type =single

[*.md]
max_line_length = off
trim_trailing_whitespace = false
